    <style name="text_fields_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/algoria</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/signin</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">#50ffffff</item>
        <item name="android:drawableLeft">@drawable/user_icon</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColorHint">@color/white</item>
